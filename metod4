using System;
using System.Collections.Generic;
using System.ComponentModel.Design;
using System.Threading.Channels;
using System.Linq;
using System.Diagnostics;

class Program
{
    static void Main(string[] args)
    {
        string a = Convert.ToString("Добрый день");
        Console.WriteLine(Obrstring(a));


    }
    static string Obrstring(string a)
    {
        char[] stroka = a.ToCharArray();
        Array.Reverse(stroka);
        string result = new string(stroka);
        return result;

    }
}
№ 5
using System;
using System.Collections.Generic;
using System.ComponentModel.Design;
using System.Threading.Channels;
using System.Linq;
using System.Diagnostics;

class Program
{
    static void Main(string[] args)
    {
        Console.WriteLine("Введите строку:");
        string input = Console.ReadLine();

        if (Palindrom(input))
        {
            Console.WriteLine("Строка является палиндромом.");
        }
        else
        {
            Console.WriteLine("Строка не является палиндромом.");
        }


    }
    static bool Palindrom(string str)
    {
        string stroka = str.Replace(" ", "").ToLower();

        for (int i = 0; i < stroka.Length / 2; i++)
        {
            if (stroka[i] != stroka[stroka.Length - 1 - i])
            {
                return false;
            }
        }

        return true;
    }
}
№ 6
using System;
using System.Collections.Generic;
using System.ComponentModel.Design;
using System.Threading.Channels;
using System.Linq;
using System.Diagnostics;
using static System.Runtime.InteropServices.JavaScript.JSType;

class Program
{
    static void Main(string[] args)
    {
        int[] numbers = { 1, 2, 3, 4, 5 }; 
        double average = srednee(numbers);
        Console.WriteLine($"Среднее значение массива: {average}");


    }
    static double srednee(int[] array)
    {
        double sum = 0;
        foreach (int number in array)
        {
            sum += number; 
        }
        return sum / array.Length;
    }
}
